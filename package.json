{
    "name": "infinite-mac",
    "version": "0.1.0",
    "private": true,
    "type": "module",
    "dependencies": {
        "classnames": "^2.3.2",
        "file-saver": "^2.0.5",
        "jszip": "^3.7.0",
        "linkify-react": "^4.1.1",
        "openai": "^5.5.1",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "ringbuf.js": "^0.3.3",
        "typescript": "^5.8.3",
        "use-debounce": "^10.0.3"
    },
    "devDependencies": {
        "@cloudflare/workers-types": "^4.20250525.0",
        "@eslint/compat": "^1.2.9",
        "@eslint/eslintrc": "^3.3.1",
        "@eslint/js": "^9.28.0",
        "@types/audioworklet": "^0.0.46",
        "@types/dom-view-transitions": "^1.0.6",
        "@types/emscripten": "^1.39.13",
        "@types/file-saver": "^2.0.5",
        "@types/react": "^18.2.6",
        "@types/react-dom": "^18.2.4",
        "@typescript-eslint/eslint-plugin": "^8.33.1",
        "@typescript-eslint/parser": "^8.33.1",
        "@vitejs/plugin-basic-ssl": "^2.0.0",
        "@vitejs/plugin-react-swc": "^3.10.1",
        "clang-format": "^1.8.0",
        "csstype": "^3.1.3",
        "eslint": "^9.28.0",
        "eslint-plugin-import": "^2.31.0",
        "eslint-plugin-react-hooks": "^5.2.0",
        "husky": "^6.0.0",
        "lint-staged": "^11.0.0",
        "prettier": "^3.5.3",
        "vite": "^6.3.5",
        "vite-plugin-svgr": "^4.3.0",
        "wrangler": "^4.19.1"
    },
    "scripts": {
        "import-emulator": "scripts/import-emulator.sh",
        "import-disks": "scripts/import-disks.py",
        "import-cd-roms": "scripts/import-cd-roms.py",
        "import-library": "scripts/import-library.py",
        "load-placeholder-stickies-file": "scripts/load-placeholder-stickies-file.py",
        "build-tools": "scripts/build-tools.sh",
        "start": "vite",
        "build": "vite build",
        "preview": "vite preview --host",
        "worker-dev": "wrangler dev --port=3128",
        "worker-deploy": "wrangler deploy --env production --minify",
        "sync-disks": "scripts/sync-disks.sh",
        "prettier": "prettier --write src workers-site",
        "lint": "eslint --fix src workers-site",
        "check": "tsc --noEmit && tsc --noEmit --project workers-site/tsconfig.json",
        "format-macemu": "clang-format -i --glob=macemu/BasiliskII/src/Unix/JS/*"
    },
    "browserslist": {
        "production": [
            ">0.2%",
            "not dead",
            "not op_mini all"
        ],
        "development": [
            "last 1 chrome version",
            "last 1 firefox version",
            "last 1 safari version"
        ]
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
            "prettier --write"
        ]
    },
    "prettier": {
        "trailingComma": "es5",
        "bracketSameLine": true,
        "bracketSpacing": false,
        "tabWidth": 4,
        "semi": true,
        "singleQuote": false,
        "quoteProps": "preserve",
        "arrowParens": "avoid"
    }
}
